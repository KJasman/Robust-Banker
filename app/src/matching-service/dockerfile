# matching-service/Dockerfile
FROM golang:1.20-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o matching-service main.go

# Final stage
FROM alpine:3.17
WORKDIR /app
COPY --from=builder /app/matching-service /app/
EXPOSE 8084
ENTRYPOINT ["/app/matching-service"]